{
    "version": "2.0.0",
    "options": {
        "env": {
            "PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig"
        }
    },
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "group": "build",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "make clean",
            "type": "shell",
            "group": "build",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "configure",
            "type": "shell",
            "group": "build",
            "command": "./configure",
            "problemMatcher": [],
            "args": [
                "CXXFLAGS=-std=c++11"
            ]
        },
        {
            "label": "autoreconf",
            "type": "shell",
            "group": "build",
            "command": "autoreconf",
            "problemMatcher": [],
            "args": [
                "-i"
            ]
        },
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}